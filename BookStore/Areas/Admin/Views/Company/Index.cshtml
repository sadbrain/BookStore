@model List<Company>
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="text-white py-2">Company List</h1>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <div class="container">
            <div class="row pb-4">
                <div class="col-6">
                </div>
                <div class="col-6 text-primary text-end">
                    <a asp-controller="Company" asp-action="Upsert" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i>
                        Create New Company
                    </a>
                </div>
            </div>

            <table class="table table-bordered table-striped" id="tblData">
                <thead>
                    <tr>
                        <th>
                            Stt
                        </th>
                                                <th>
                            Name
                        </th>
                        <th>
                            Street Address
                        </th>
                         <th>
                            Strict Address
                        </th>
                        <th>
                            City
                        </th>
                        <th>
                            Phone Number
                        </th>
                        <th>

                        </th>
                    </tr>
                </thead>
                <tbody>
                    @for(var i =0; i<Model.Count;i++)
                    {
                        
                        <tr>
                            <td>
                                @(i+1)
                            </td>
                            <td>
                                @Model[i].Name
                            </td>
                                                        <td>
                                @Model[i].StreetAddress
                            </td>
                                                        <td>
                                @Model[i].StrictAddress
                            </td>
                                                        <td>
                                @Model[i].City
                            </td>
                                                        <td>
                                @Model[i].PhoneNumber
                            </td>
                            <td>
                                <div class="w-75 btn-group" role="group">
                                    <a asp-controller="Company" asp-action="Upsert" asp-route-id="@Model[i].Id" class="btn btn-primary mx-4">
                                        <i class="bi bi-pencil-square"></i>  Edit
                                    </a>

                                    <a asp-controller="Company" asp-action="Delete" asp-route-id="@Model[i].Id" class="btn btn-danger mx-4">
                                        <i class="bi bi-trash-fill"></i>  Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>
@section Scripts {
    <script src="~/js/company.js" asp-append-version="true"></script>
}

