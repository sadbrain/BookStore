@model Product
<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="text-white py-2">Delete Product</h1>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Id" hidden />
            @* <input asp-for="ImageUrl" hidden /> *@
            <div class="row">
                <div class="col-10">
                    <div class="border p-3">

                        <div class="form-floating col-12 py-2">
                            <input asp-for="Title" class="form-control border-0 shadow" disabled />
                            <label asp-for="Title" class="ms-2"></label>
                        </div>
                        <div class="form-floating col-12 py-2">
                            <label asp-for="Description" class="ms-2 text-muted"></label>
                            <textarea asp-for="Description" class="form-control border-0 shadow" disabled></textarea>
                        </div>
                        <div class="form-floating col-12 py-2">
                            <input asp-for="ISBN" class="form-control border-0 shadow" disabled />
                            <label asp-for="ISBN" class="ms-2"></label>
                            <span asp-validation-for="ISBN" class="text-danger"></span>
                        </div>
                        <div class="form-floating col-12 py-2">
                            <input asp-for="Author" class="form-control border-0 shadow" disabled />
                            <label asp-for="Author" class="ms-2"></label>
                        </div>
                        <div class="form-floating col-12 py-2">
                            <input asp-for="ListPrice" class="form-control border-0 shadow" disabled />
                            <label asp-for="ListPrice" class="ms-2"></label>
                        </div>
                        <div class="form-floating col-12 py-2">
                            <input asp-for="Price" class="form-control border-0 shadow" disabled />
                            <label asp-for="Price" class="ms-2"></label>
                        </div>
                        <div class="form-floating col-12 py-2">
                            <input asp-for="Price50" class="form-control border-0 shadow" disabled />
                            <label asp-for="Price50" class="ms-2"></label>
                        </div>
                        <div class="form-floating col-12 py-2">
                            <input asp-for="Price100" class="form-control border-0 shadow" disabled />
                            <label asp-for="Price100" class="ms-2"></label>
                        </div>
                        <div class="form-floating col-12 py-2">
                            <input asp-for="Category.Name" class="form-control border-0 shadow" disabled />
                            <label asp-for="Category.Name" class="ms-2"></label>
                        </div>

                        <div class="form-floating col-12 py-2">
                            <input type="file" name="file" class="form-control border-0 shadow" disabled />
                            @* <label asp-for="ImageUrl" class="ms-2"></label> *@
                            @* <span asp-validation-for="Product.ImageUrl" class="text-danger"></span> *@

                        </div>
                        <div class="row mt-3">
                            <div class="col-6 col-md-3">
                                <button type="submit" class="btn btn-primary form-control">
                                    Delete
                                </button>
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controlelr="Product" asp-action="Index" class="btn btn-outline-primary form-control">
                                    Back To List
                                </a>
                            </div>
                        </div>


                    </div>

                </div>
                <div class="col-2">

                    @* <img src="@Model.ImageUrl" width="100%"
                         style="border-radius:5px; border:1px solid #bbb9b9" /> *@
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor autolink charmap codesample emoticons  lists   table visualblocks wordcount',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough |  align lineheight | numlist bullist indent outdent',
        });
    </script>
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
